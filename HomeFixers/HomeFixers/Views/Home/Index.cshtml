@{
    Layout = "~/Views/Shared/_Template.cshtml";
}
<div class="main">
    <header>
        <div class="indent">
            <div class="wrapper">
                <div class="slider">
                    <ul class="items">
                        <li><img src="../images/slider-img1.jpg" alt=""></li>
                        <li><img src="../images/slider-img2.jpg" alt=""></li>
                        <li><img src="../images/slider-img3.jpg" alt=""></li>
                    </ul>
                </div>
                <a class="prev">prev</a> <a class="next">next</a>
                <div class="banner1-bg"></div>
                <div class="banner-1"></div>
            </div>
        </div>
    </header>
    <aside>
        <div class="wrapper">
            <div class="column-1">
                <div class="box">
                    <div class="aligncenter">
                        <h4>Electrical Services</h4>
                    </div>
                    <div class="box-bg maxheight">
                        <div class="padding">
                            <h6 class="color-1">Make an appointment now</h6>
                            <p>Appoint our experienced electricians to get your electrical fittings fixed.</p>
                        </div>
                        
                    </div>
                </div>
            </div>
            <div class="column-1">
                <div class="box">
                    <div class="aligncenter">
                        <h4>Plumbing Services</h4>
                    </div>
                    <div class="box-bg maxheight">
                        <div class="padding">
                            <h6 class="color-1">Make an appointment now</h6>
                            <p>Appoint our experienced plumbers to get your plumbing fixed.</p>
                        </div>
                       
                    </div>
                </div>
            </div>
            <div class="column-2">
                <div class="box">
                    <div class="aligncenter">
                        <h4>Groceries Shopping</h4>
                    </div>
                    <div class="box-bg maxheight">
                        <div class="padding">
                            <h6 class="color-1">Coming Soon!!</h6>
                            <p>Browse through our catalog, book groceries online and get it delivered on your doorstep</p>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </aside>
    <!--==============================content================================-->
    <section id="content">
        <div class="wrapper">
            <article class="col-1">
                <div class="indent-left">
                    <h2>Welcome!</h2>
                    <h6 class="prev-indent-bot">Home Fixers is a website that allows you to book handyman services on the go.</h6>
                    <p class="prev-indent-bot">
                        We offer a range of services from plumbing to groceries. It allows you to book handyman services<br>
                        on the go. You can make an appointment for 4 time slots in a day. Groceries module is coming<br>
                        soon to our portal. 
                    </p>
                </div>
            </article>
            <article class="col-2">
                <h3>Testimonials</h3>
                <div class="wrapper indent-bot">
                    <figure class="img-indent"><img src="../images/page1-img1.jpg" alt=""></figure>
                    <div class="extra-wrap text-1">
                        <div class="margin-top">
                            <h6><a class="link color-2" href="#">James Williams</a></h6>
                            Reliable service provider and great work ethic. My time has been worthwhile
                        </div>
                    </div>
                </div>
                <div class="wrapper">
                    <figure class="img-indent"><img src="../images/page1-img2.jpg" alt=""></figure>
                    <div class="extra-wrap text-1">
                        <div class="margin-top">
                            <h6><a class="link color-2" href="#">Thomas Seether</a></h6>
                            Their servies are exceptional and provide great bang for the buck.
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>