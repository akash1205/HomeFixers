@model IEnumerable<HomeFixers.Models.ServiceProvider>
@{
    ViewBag.Title = "Search Schedule";
}

<h2>SearchSchedule</h2>

@using (Html.BeginForm("SearchSchedule", "ServiceProviders", FormMethod.Get))

{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("SearchService", "Services", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Service", "Plumber", new { htmlAttributes = new { @class = "form-control" }, required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("SearchDate", "Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="date" name="SDate" id="datepicker" >
            </div>
        </div>

        <div class="form-group">
            @Html.Label("selectTime", "Time", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                   <select id="Time" name="Time" class="form-control">
                        <option selected="selected" value="8-10">Morning(08:00-10:00 am)</option>
                        <option value="10-12">Morning(10:00-12:00 am</option>
                        <option value="1-3">Afternoon(01:00-03:00 pm)</option>
                        <option value="3-5">Evening(03:00-05:00 pm)</option>
                    </select>
                
            </div>
        </div>

        @*<div class="form-group">
            @Html.Label("SearchLocation", "Location", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Zip", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>*@


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>

    </div>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.service.ServiceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailId)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.ActionLink("Book", "BookService", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<script type="text/javascript">
   function load(){
       var today = new Date().toISOString().split('T')[0];
       document.getElementsByName("SDate")[0].setAttribute('min', today);
   }
   window.onload = load;
</script>


